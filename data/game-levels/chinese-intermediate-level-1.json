          "content": {
            "type": "vocabulary",
            "words": [
              {
                "word": "谈判",
                "definition": "Negotiation",
                "pronunciation": "tán pàn",
                "examples": ["我们正在与客户进行谈判。"]
              },
              {
                "word": "合作",
                "definition": "Cooperation",
                "pronunciation": "hé zuò",
                "examples": ["两家公司决定展开合作。"]
              },
              {
                "word": "投资",
                "definition": "Investment",
                "pronunciation": "tóu zī",
                "examples": ["他们计划在这个项目上投资一百万元。"]
              },
              {
                "word": "利润",
                "definition": "Profit",
                "pronunciation": "lì rùn",
                "examples": ["公司今年的利润比去年增加了20%。"]
              },
              {
                "word": "市场",
                "definition": "Market",
                "pronunciation": "shì chǎng",
                "examples": ["我们需要开拓新的市场。"]
              }
            ],
            "exerciseType": "matchDefinition"
          },
          "difficulty": 3,
          "timeLimit": 420,
          "points": 60
        },
        {
          "id": "advanced-vocab-challenge-2",
          "type": "dialogue",
          "title": "商务对话练习",
          "content": {
            "type": "dialogue",
            "scenario": "两个商业伙伴讨论合作计划",
            "characters": [
              {
                "id": "person1",
                "name": "李总"
              },
              {
                "id": "person2",
                "name": "张经理"
              }
            ],
            "dialogue": [
              {
                "characterId": "person1",
                "text": "张经理，我们来讨论一下新的合作计划吧。",
                "isUserTurn": false
              },
              {
                "characterId": "person2",
                "isUserTurn": true,
                "expectedResponses": ["好的，李总。我们公司有什么可以帮助您的？", "当然，李总。您对这次合作有什么想法？", "没问题，李总。我们来探讨一下合作的细节。"]
              },
              {
                "characterId": "person1",
                "text": "我们想在你们的平台上投资一个新项目，预计投资额在500万左右。",
                "isUserTurn": false
              },
              {
                "characterId": "person2",
                "isUserTurn": true,
                "expectedResponses": ["这是个很大的投资额度。我们非常感兴趣，能详细说说这个项目吗？", "500万是一笔可观的投资。您能进一步介绍一下这个项目的具体内容吗？", "我们很荣幸能得到这样的投资机会。能否告诉我们更多关于这个项目的信息？"]
              }
            ],
            "userRole": "person2"
          },
          "difficulty": 4,
          "timeLimit": 300,
          "points": 70
        }
      ]
    }
