      "order": 1,
      "minScore": 75,
      "challenges": [
        {
          "id": "complex-sentence-challenge-1",
          "type": "grammar",
          "title": "学习‘虽然...但是...’句型",
          "content": {
            "type": "grammar",
            "explanation": "虽然...但是...用于表示转折关系，前一部分说明原因或让步，后一部分表示相反或出乎意料的结果。",
            "examples": [
              {
                "sentence": "虽然今天下雨，但是我还是去上班了。",
                "translation": "Although it's raining today, I still went to work."
              },
              {
                "sentence": "虽然他很忙，但是他总是有时间陪家人。",
                "translation": "Although he is very busy, he always has time for his family."
              }
            ],
            "exercise": {
              "type": "fillInTheBlank",
              "question": "完成句子：虽然这道题很难，_______我还是要尝试解决。",
              "correctAnswer": "但是",
              "alternativeAnswers": ["不过", "可是"]
            }
          },
          "difficulty": 2,
          "timeLimit": 300,
          "points": 40
        },
        {
          "id": "complex-sentence-challenge-2",
          "type": "translation",
          "title": "句型翻译练习",
          "content": {
            "type": "translation",
            "sourceText": "Although the movie was long, it was very interesting.",
            "targetLanguage": "zh",
            "correctAnswer": "虽然这部电影很长，但是很有趣。",
            "alternativeAnswers": [
              "这部电影虽然很长，但是非常有意思。",
              "尽管电影很长，但是很精彩。"
            ]
          },
          "difficulty": 3,
          "timeLimit": 180,
          "points": 50
        }
      ]
    },
    {
      "id": "chinese-intermediate-level-1-stage-2",
      "title": "高级词汇",
